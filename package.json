{
    "name": "adr-manager",
    "version": "1.1.0",
    "scripts": {
        "serve": "vue-cli-service serve --open",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "tests:chrome": "cypress run --browser chrome --headless",
        "e2e:test": "cypress run",
        "test": "jest"
    },
    "dependencies": {
        "@mdi/font": "^6.2.95",
        "antlr4": "^4.9.2",
        "axios": "^0.22.0",
        "core-js": "^3.18.2",
        "marked": "^3.0.4",
        "pizzly-js": "^0.2.8",
        "roboto-fontface": "*",
        "sanitize-filename": "^1.6.3",
        "splitpanes": "^2.3.8",
        "vue": "^2.6.14",
        "vue-codemirror": "^4.0.6",
        "vue-easy-dnd": "^1.16.1",
        "vue-element-resize-detector": "^1.0.6",
        "vue-input-autowidth": "^1.0.11",
        "vue-observe-visibility": "^1.0.0",
        "vue-resource": "^1.5.3",
        "vue-router": "^3.5.2",
        "vue-simple-alert": "^1.1.1",
        "vue-tippy": "^4.12.0",
        "vuetify": "^2.5.9"
    },
    "devDependencies": {
        "@cypress/code-coverage": "^3.9.11",
        "@vue/cli-plugin-babel": "~4.5.13",
        "@vue/cli-plugin-eslint": "~4.5.13",
        "@vue/cli-service": "~4.5.13",
        "babel-eslint": "^10.1.0",
        "babel-plugin-istanbul": "^6.0.0",
        "cypress": "^8.5.0",
        "eslint": "^7.32.0",
        "eslint-plugin-vue": "^7.19.1",
        "jest": "^27.2.4",
        "vue-cli-plugin-vuetify": "^2.4.2",
        "vue-template-compiler": "^2.6.14"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "rules": {
            "quotes": [
                "error",
                "double",
                {
                    "allowTemplateLiterals": true
                }
            ],
            "vue/no-mutating-props": "off"
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
